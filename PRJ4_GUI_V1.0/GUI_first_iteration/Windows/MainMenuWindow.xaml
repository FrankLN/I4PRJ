<Window x:Class="GUI_first_iteration.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainMenuWindow" Height="380" Width="492.692" Closing="Window_Closing">
    <Grid>
      
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Button Name="btnEditProfile" Content="Edit profile" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="445" Height="53" Click="btnEditProfile_Click"/>
                <Button Name="btnNewJob" Content="New job" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="445" Height="53" Grid.Row="1" Click="btnNewJob_Click"/>
                <Button Name="btnJobHistory" Content="Job history" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="445" Height="53" Grid.Row="2" Click="btnJobHistory_Click"/>
                <Button Name="btnLogOut" Content="Log out" Grid.Row="3" Height="53" Click="btnLogOut_Click" Width="100" Margin="0,50,0,0" HorizontalAlignment="Center"/>
            </Grid>
     
       
</Window>
