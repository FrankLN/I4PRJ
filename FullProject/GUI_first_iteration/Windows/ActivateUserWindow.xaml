<Window x:Class="GUI_first_iteration.ActivateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ActivateUserWindow" Height="430.269" Width="416.573" >
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="186" Margin="10,10,10,10" VerticalAlignment="Top" Width="389">
            <TextBlock Text="An activation key has been sent to your email. Please enter key to activate your user account"
                Height="186"
                Width="389"
                FontSize="25"
                TextWrapping="Wrap"
                TextAlignment="Center"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="186" Margin="10,10,10,10" VerticalAlignment="Bottom" Width="389">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBox Name="tbxActivateUser" Text="{Binding Path=ActivationCode,Mode=OneWayToSource}"  HorizontalAlignment="Center" Height="38" Margin="0,10,0,0" TextWrapping="Wrap"  Width="201" Grid.Row="0"/>
                <Button Name="btnActivateUser" Content="Confirm" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="1"  Width="100" Height="35" Click="btnActivateUser_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
