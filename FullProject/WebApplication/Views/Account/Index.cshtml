@model WebApplication.Models.IndexUsersViewModel

@{
    ViewBag.Title = "All Users";
}

<h2>Users</h2>
    <table class="table table-striped">
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>

            <th>
                Status
            </th>
        </tr>

    @foreach (var item in Model.UserTuples)
    {
        <tr>
            <td class="-md-2">
                @Html.DisplayFor(modelItem => item.Item1.FName )
                @Html.DisplayFor(modelItem => item.Item1.LName)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.Item1.UserName)
            </td>
            <td class="-md-2">
                @Html.DisplayFor(modelItem => item.Item2)
            </td>
            <td class="col-md-6">
                @Html.ActionLink("Edit", "Edit", new { id = item.Item1.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Item1.Id }) |
                @Html.ActionLink("Ban", "Delete", new { id = item.Item1.Id })
            </td>
        </tr>
    }

</table>

